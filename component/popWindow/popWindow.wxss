.box{
    width: 100vw;
    height: 100vh;
    background-color: rgba(204, 204, 204, 0.267);
    position: relative;
}
.content{
    width: 600rpx;
    height: 700rpx;
    background-color: #fff;
    opacity: 1;
    z-index: 1000;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 200rpx;
    border-radius: 5px;
}
.content icon{
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}
.storeName{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 10px;
}
.option{
    width: 100%;
    display: flex;
}
.option text{
    flex:1;
    text-align: center;
    margin-bottom: 10px;
}
.last{
    color: #A2A2A2;
}
.title{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
.title text{
    margin: 0px 10px;
    color: #ccc;
}
.line{
    width: 60rpx;
    height: 1rpx;
    border-bottom: 1px solid #ccc;
}
.announcement{
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    line-height: 40rpx;
    /* font-family: '宋体'; */
    letter-spacing: 2px;
    color: black;

}